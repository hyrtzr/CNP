<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> 
        <!-- Customize your theme here. -->
  </style>  

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="LinearLayout_SuperParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">3</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:layout_height">170dp</item>
    </style>

    <style name="MenuIv">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MenuTv">
        <item name="android:textColor">@color/menuTv</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonBarButton" />
    
    <!-- account -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="EditText">
            <item name="android:layout_height">@dimen/user_login_et_height</item>
               <item name="android:layout_width">match_parent</item>
               <item name="android:background">@drawable/et_bg</item>
                <item name="android:textColor">@android:color/black</item>
               <item name="android:paddingLeft">@dimen/user_login_et_paddleft</item>
                <item name="android:singleLine">true</item>
                <!-- tools:ignore="NewApi" -->
                <item name="android:textCursorDrawable"  >@drawable/text_cursor_holo_light</item>
           </style>

    <style name="EditText_small">
        <item name="android:layout_height">@dimen/user_login_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:singleLine">true</item>
        <!-- tools:ignore="NewApi" -->
        <item name="android:textCursorDrawable" >@drawable/text_cursor_holo_light</item>
    </style>

        <style name="Button">
            <item name="android:textColor">@color/btn_text</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">@dimen/user_login_btn_height</item>
            <item name="android:background">@drawable/btn_bg</item>
            <item name="android:layout_marginTop">@dimen/user_login_btn_margintop</item>
            <item name="android:layout_gravity">center_horizontal</item>
        </style>

    <style name="Button_small">
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">@dimen/user_login_btn_height</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_marginTop">@dimen/user_login_btn_margintop</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>



    <style name="TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="indexIv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/android_list_idex</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="FaceBigIv">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">275dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/et_bg</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/container_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ListView">
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/lv_divider</item>
        <item name="android:dividerHeight">@dimen/lv_driver_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <!-- base -->
    <!-- 全局actionbar标题样式设置 -->
    <style name="Widget.Edu.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

<!-- <item name="android:backgroundSplit">#000000</item>
        <item name="android:backgroundStacked">#ffffff</item> -->
