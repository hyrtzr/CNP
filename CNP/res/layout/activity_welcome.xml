<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cnp_bg_color">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_marginTop="@dimen/imageview_smallest"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="随便逛逛"
        android:layout_marginTop="@dimen/imageview_small"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/iv_logo"
        android:layout_alignLeft="@id/iv_logo"
        android:layout_alignRight="@id/iv_logo"
        style="@style/large_tv"
        android:padding="@dimen/view_margin_small"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="#fff"
        android:background="@drawable/bg_grenn_btn"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/btn_search"
        android:layout_alignLeft="@id/btn_search"
        android:layout_alignRight="@id/btn_search"
        style="@style/large_tv"
        android:padding="@dimen/view_margin_small"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="#fff"
        android:background="@drawable/bg_blue_btn"/>
</RelativeLayout>