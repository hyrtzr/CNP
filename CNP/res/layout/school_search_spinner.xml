<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/search_result_spinner_width"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/search_result_spinner_height"
            android:background="@drawable/bg_search_spinner_normal1"/>
        <ImageView
            android:id="@+id/iv_school_search_spinner_center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search_spinner_normal2"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/search_result_spinner_bottom_height"
            android:background="@drawable/bg_search_spinner_bottom"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_school_search_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"></ListView>
</RelativeLayout>