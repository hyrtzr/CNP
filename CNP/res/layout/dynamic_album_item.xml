<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <ImageView
        android:id="@+id/item_album_image"
        android:layout_width="@dimen/imageview_small"
        android:layout_height="@dimen/imageview_small"
        android:layout_margin="@dimen/view_margin_small"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:id="@+id/item_album_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/medium_tv"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_photo_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_tv"
                android:text="照片描述："
                android:layout_marginTop="@dimen/view_margin_small"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/tv_photo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_tv"
                android:text="时间："
                android:layout_below="@id/tv_photo_describe"
                android:layout_marginTop="@dimen/view_margin_smallest"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cnp_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/view_margin"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/view_margin_small"
                android:gravity="right"
                android:paddingRight="40dp"
                >
            <TextView
                android:id="@+id/btn_change_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/medium_tv"
                android:textColor="@color/schoolindex_notice"
                android:text="修改 | "
                android:layout_margin="0dp"/>
            <TextView
                android:id="@+id/btn_del_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/medium_tv"
                android:textColor="@color/schoolindex_notice"
                android:text="删除"
                android:layout_margin="0dp"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>