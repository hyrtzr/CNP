<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="130dp"
    android:background="@drawable/bg_sign_out_dialog"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/view_margin">

    <TextView
        style="@style/medium_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center_horizontal"
        android:text="是否确定退出当前账号？"
        android:textColor="#fff" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/view_margin_small"
        android:layout_marginTop="@dimen/view_margin"
        android:background="#fff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_out_cancle"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/view_margin_small"
            android:background="@drawable/bg_blue_btn"
            android:gravity="center"
            android:textColor="#fff"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_sign_out_submit"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/view_margin_small"
            android:background="@drawable/bg_blue_btn"
            android:gravity="center"
            android:textColor="#fff"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>