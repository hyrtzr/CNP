<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_sendword_line"
    android:padding="@dimen/view_margin_small">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/view_margin_small"
        android:layout_marginTop="@dimen/view_margin_small">

        <ImageView
            android:id="@+id/dynamic_Avatar"
            android:layout_width="@dimen/cnp_dynamic_item_image_height"
            android:layout_height="@dimen/cnp_dynamic_item_image_height"
            android:layout_marginTop="@dimen/view_margin_smallest"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/view_margin_small"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dynamic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/medium_tv"
                android:layout_margin="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dynamic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/small_tv"
                    android:textColor="@color/schoolindex_photo"
                    android:gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:padding="0dp" />
                <TextView
                    android:id="@+id/dynamic_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来自我的动态"
                    style="@style/small_tv"
                    android:gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:padding="0dp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/item_comm_btn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dynamic_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/medium_tv"
        android:text=""
        android:layout_marginTop="0dp"
        android:padding="0dp" />

    <LinearLayout
        android:id="@+id/layout_forward_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_margin_smallest"
        android:layout_marginTop="@dimen/view_margin_small"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginRight="@dimen/view_margin"
        android:background="@drawable/shape_line"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dynamic_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/medium_tv"
            android:padding="0dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/actionbar_bg"
            android:layout_marginRight="0dp"/>
    <TextView
        android:id="@+id/dynamic_dcontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/medium_tv"
        android:padding="0dp"
        android:layout_marginTop="0dp"
         android:layout_marginLeft="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_margin_smallest"
        android:gravity="left">

        <GridView
            android:id="@+id/gv_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/view_margin_smallest"
            android:verticalSpacing="@dimen/view_margin_smallest"
            android:numColumns="3"
            android:gravity="left"
            android:scrollbars="none"/>

        <ImageView
            android:id="@+id/dynamic_image1"
            android:layout_width="@dimen/imageview_smallest"
            android:layout_height="@dimen/imageview_smallest"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/dynamic_image2"
            android:layout_width="@dimen/imageview_smallest"
            android:layout_height="@dimen/imageview_smallest"
            android:layout_marginLeft="@dimen/view_margin_small"
            android:layout_marginRight="@dimen/view_margin_small"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/dynamic_image3"
            android:layout_width="@dimen/imageview_smallest"
            android:layout_height="@dimen/imageview_smallest"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/cnp_line_color"
        android:textColor="@color/cnp_text_color"
        android:layout_marginLeft="@dimen/view_margin_small"
        android:layout_marginRight="@dimen/view_margin_small"
        android:layout_marginTop="@dimen/view_margin_small" />

    <LinearLayout
        android:id="@+id/item_bottom_list"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin_small"
        android:layout_marginRight="@dimen/view_margin_small"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/dynamic_zf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/image_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/day_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转发"
                    android:minLines="2"
                    android:textSize="@dimen/cnp_school_text_size"
                    android:textColor="@color/cnp_text_color_black"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dynamic_zf_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:minLines="2"
                    android:textSize="@dimen/cnp_school_text_size"
                    android:textColor="@color/cnp_text_color_black"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/cnp_line_color"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:id="@+id/dynamic_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/day_commit"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:minLines="2"
                    android:textSize="@dimen/cnp_school_text_size"
                    android:textColor="@color/cnp_text_color_black"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dynamic_pl_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:minLines="2"
                    android:textSize="@dimen/cnp_school_text_size"
                    android:textColor="@color/cnp_text_color_black"
                    android:gravity="center" />

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/cnp_line_color"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dynamic_time2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:minLines="2"
                android:textSize="@dimen/cnp_school_text_size"
                android:textColor="@color/cnp_text_color_black"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/cnp_school_text_margin_max"
        style="@style/cnp_school_layout"
        android:gravity="center"
        android:background="@drawable/cnp_bg"
        android:layout_margin="@dimen/cnp_school_layout_margin"
        android:visibility="gone">

        <TextView
            android:id="@+id/dynamic_commit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/dynamic_commit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/dynamic_commit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
</LinearLayout>