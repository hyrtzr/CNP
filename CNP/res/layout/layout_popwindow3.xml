<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/pop_view"
    android:background="#e0000000"
    >

    <View
        android:id="@+id/pop_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <com.hyrt.cnp.base.view.HackyViewPager
        android:id="@+id/pop_img"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:id="@+id/layout_photo_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/imageview_smallest"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/view_margin"
        android:paddingTop="@dimen/view_margin"
        android:paddingBottom="@dimen/view_margin">
        <LinearLayout
            android:id="@+id/layout_photo_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/day_forward"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_tv"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/view_margin_smallest"
                android:textColor="#80f0f0f0"
                android:text="转发"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_photo_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/medium_tv"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/view_margin_smallest"
                android:textColor="@android:color/holo_red_dark"
                android:text="删除"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="1dp"
                android:layout_height="@dimen/view_margin"
                android:layout_centerVertical="true"
                android:background="#fff"
                android:layout_toRightOf="@id/layout_photo_del"
                android:layout_marginTop="5dp"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_photo_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_toRightOf="@id/layout_photo_del"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/day_commit2"/>
            <TextView
                android:id="@+id/iv_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/medium_tv"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/view_margin_smallest"
                android:textColor="#fff"
                android:text="评论"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_photo_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/medium_tv"
            android:layout_marginTop="1dp"
            android:textColor="#fff"
            android:text="详情 >"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <!--<ImageView
        android:id="@+id/iv_photo_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_photo_del"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_bottom_margin"
        android:layout_marginRight="@dimen/view_margin"
        android:visibility="gone"/>-->

</RelativeLayout>