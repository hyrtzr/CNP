<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/gridview_item"
    android:padding="@dimen/view_margin_smallest"
    android:background="@drawable/shape_sendword_line">
    <ImageView
        android:id="@+id/gridview_image"
        android:layout_width="@dimen/imageview_smallest"
        android:layout_height="@dimen/imageview_smallest"
        android:layout_margin="@dimen/view_margin_smallest"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/gridview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/small_tv"
            android:layout_margin="0dp"
            android:textColor="@color/cnp_text_color_black"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</LinearLayout>